{
  "compilerOptions": {
    "target": "es2015",
    "lib":["es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
